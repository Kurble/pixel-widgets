column {
    width: fill(1);
    height: fill(1);
    padding: 2;
    align-horizontal: center;
}

input {
    width: fill(1);
    background: #111;
    color: #b0b;
    padding: 3;
}

button {
    padding: 5 20;
    margin: 5 0;
    background: #404;
}

button:hover {
    background: #808;
}

progress {
    width: 310;
    height: 40;
    padding: 5;
    margin: 5;
    background: #111;
    clip-bar: true;
}

progress > bar {
    background: "examples/bar.png";
    clip-bar: true;
}